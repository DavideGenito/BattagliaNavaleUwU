<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:local="clr-namespace:BattagliaNavale"
             xmlns:models="clr-namespace:BattagliaNavale.Models"
             xmlns:views="clr-namespace:BattagliaNavale.Views"
             x:Class="BattagliaNavale.Views.Regolamento"
             Title="Regolamento">
    <Grid>
        <Image
            Source="../Resources/Images/sfondo_mare.jpg"
            Aspect="AspectFill" />

        <ScrollView>
            <StackLayout Spacing="25" Padding="15">

                <Image
                    Source="../Resources/Images/regolamento_img.png"
                    Aspect="AspectFit"
                    HeightRequest="200"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    Margin="0,10,0,20" />

                <Grid RowSpacing="15" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Rectangle 
                            Fill="White" 
                            Stroke="Black" 
                            StrokeThickness="3" 
                            RadiusX="15" RadiusY="15" 
                            Opacity="0.7" />
                        <Label 
                            Text="Per prima cosa posiziona le tue navi nel campo da gioco. Attento a non piazzarle vicine!"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            Margin="15" />
                    </Grid>

                    <Image
                        Grid.Column="1"
                        Source="../Resources/Images/esempio_img.png"
                        HeightRequest="120"
                        WidthRequest="120"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Grid>

                <Grid RowSpacing="15" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Source="../Resources/Images/conversazione_img.png"
                        HeightRequest="120"
                        WidthRequest="120"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />

                    <Grid Grid.Column="1">
                        <Rectangle 
                            Fill="White" 
                            Stroke="Black" 
                            StrokeThickness="3" 
                            RadiusX="15" RadiusY="15" 
                            Opacity="0.7" />
                        <Label 
                            Text="A turni tu e il computer dovrete fare un tentativo per trovare le navi avversarie, indicando un paio di coordinate."
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            Margin="15" />
                    </Grid>
                </Grid>

                <Grid RowSpacing="15" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Rectangle 
                            Fill="White" 
                            Stroke="Black" 
                            StrokeThickness="3" 
                            RadiusX="15" RadiusY="15" 
                            Opacity="0.7" />
                        <Label 
                            Text="Ogni tentativo verrÃ  accompagnato da un risultato, che puÃ² essere: acqua, nave colpita e nave affondata."
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            Margin="15" />
                    </Grid>

                    <Image
                        Grid.Column="1"
                        Source="../Resources/Images/esempio2_img.png"
                        HeightRequest="120"
                        WidthRequest="120"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Grid>

                <Grid Margin="0,10">
                    <Rectangle 
                        Fill="LightGreen" 
                        Stroke="DarkGreen" 
                        StrokeThickness="3" 
                        RadiusX="15" RadiusY="15" 
                        Opacity="0.7" />
                    <Label 
                        x:Name="lblIndicazioni4"
                        Text="ðŸ† Vince il primo che affonda tutte le navi nemiche! ðŸ†"
                        HorizontalOptions="Center" 
                        VerticalOptions="Center"
                        HorizontalTextAlignment="Center"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="DarkGreen"
                        Margin="20,15" />
                </Grid>

                <Button
                    x:Name="btn_tornaAllaHome"
                    Margin="20,15,20,30"
                    HeightRequest="60"
                    BackgroundColor="#92D36E"
                    BorderColor="#629C44"
                    BorderWidth="3"
                    Text="Torna alla home"
                    FontFamily="Poppins"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="#000000"
                    HorizontalOptions="Fill"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type views:Regolamento}}, Path=OpenHomeCommand}" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>