<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BattagliaNavale.Views.PosizionaNavi"
             Title="PosizionaNavi">
    <Grid>
        <Image
        Source="../Resources/Images/sfondo_mare.jpg"
        Aspect="AspectFill"
        />
        <VerticalStackLayout>
            <Grid
                x:Name="grigliaPosizionaNavi">
                <Image
                    Source="../Resources/Images/barca3.png"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="NaveUnoClick"
                            NumberOfTapsRequired="1"
                            />
                    </Image.GestureRecognizers>
                </Image>
                <Image
                    Source="../Resources/Images/barca1.png"
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.RowSpan="3"
                    >       
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="NaveDueClick"
                            NumberOfTapsRequired="1"
                            />
                    </Image.GestureRecognizers>
                </Image>
                <Image
                    Source="../Resources/Images/barca4.png"
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.RowSpan="3"
                    >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                        Tapped="NaveTreClick"
                        NumberOfTapsRequired="1"
                        />
                    </Image.GestureRecognizers>
                </Image>
                <Image
                    Source="../Resources/Images/barca2.png"
                    Grid.Row="0"
                    Grid.Column="3"
                    Grid.RowSpan="4"
                    >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                        Tapped="NaveQuattroClick"
                        NumberOfTapsRequired="1"
                        />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
            <Image
                Source="../Resources/Images/posiziona_navi.png"
                />
            <HorizontalStackLayout>
                <Button
                    />
                <Button
                    />
                <Button
                    />
                <Button
                    />
                <Button
                    />  
            </HorizontalStackLayout>
            <Button
                x:Name="btn_gioca"
                HeightRequest="60"
                BackgroundColor="#92D36E"
                BorderColor="#629C44"
                BorderWidth="2"
                Text="Gioca ora!"
                FontFamily="Poppins"
                FontSize="17"
                TextColor="#000000"
                Command="{Binding Source={RelativeSource AncestorType={x:Type views:Home}}, Path=IniziaGiocoCommand}"
                />
        </VerticalStackLayout>
    </Grid>
</ContentPage>